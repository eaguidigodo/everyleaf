<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<h4>Search by title: </h4>
  <%= form_tag(tasks_path, method: :get) do |f| %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= select_tag(:search_status, options_for_select(Task.distinct.pluck(:status) ,:selected =>params[:search_status]), include_blank: true  )%>   
     <%= submit_tag("Search") %>
  <% end %>

  <h4>Search by status: </h4>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th>Status</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.name %></td>  
        <td><%= task.detail %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @sort_expired %>
  <%= link_to "Back", tasks_path %>
<% else %>
  <%= link_to " sort by end deadline", tasks_path(sort_expired: "true") %>
<% end %>
<br>

<%= link_to 'New Task', new_task_path %>
