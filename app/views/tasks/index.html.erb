<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

  <%= form_tag(tasks_path, method: :get) do |f| %>
    <p>Search by title: <%= text_field_tag(:search, params[:search]) %></p>
    
    <p>Search by Status: <%= select_tag(:search_status, options_for_select(Task.distinct.pluck(:status).uniq ,:selected =>params[:search_status]), include_blank: true  )%></p>
      
    <p>Search by label: <%= select_tag(:search_label, options_for_select(Tag.distinct.pluck(:name).uniq ,:selected =>params[:search_label]), include_blank: true) %></p> 
    
     <%= submit_tag("Search") %>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th>Status</th>
      <th>Deadline</th>
      <th>Priority</th>
      <th>Author</th>
      <th>Labels</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= paginate @tasks %>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.name %></td>  
        <td><%= task.detail %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.user.username %></td>
        <td>
        <%task.tags.all.each do |label|%>
          <%= label.name%> <br>
          <%end%>
        <td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @sort_expired %>
  <%= link_to "Back", tasks_path %>
<% else %>
  <%= link_to " sort by end deadline", tasks_path(sort_expired: "true") %>
  <%= link_to " sort by priority", tasks_path(sort_priority: "true") %>
<% end %>
<br>

<%= link_to 'New Task', new_task_path %>
